# Facebook API Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Facebook App ID from your Facebook Developer Console
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# ============================================================================
# BASIC API CONFIGURATION
# ============================================================================

# Facebook API Version (default: v19.0)
VITE_FACEBOOK_API_VERSION=v19.0

# OAuth Redirect URI (should match your Facebook App settings)
# For local development: http://localhost:8080/auth/facebook/callback
# For production: https://yourdomain.com/auth/facebook/callback
VITE_FACEBOOK_REDIRECT_URI=http://localhost:8080/auth/facebook/callback

# Facebook API Scopes (comma-separated)
# Required scopes for reading ads data and managing campaigns
VITE_FACEBOOK_SCOPES=ads_read,ads_management

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable Facebook integration entirely (default: true)
# VITE_ENABLE_FACEBOOK_INTEGRATION=true

# Enable automatic data synchronization (default: true)
# VITE_FACEBOOK_AUTO_SYNC=true

# Enable batch API requests for better performance (default: true)
# VITE_FACEBOOK_BATCH_REQUESTS=true

# Enable rate limiting protection (default: true)
# VITE_FACEBOOK_RATE_LIMITING=true

# Enable data caching for better performance (default: true)
# VITE_FACEBOOK_DATA_CACHING=true

# Enable automatic error recovery (default: true)
# VITE_FACEBOOK_ERROR_RECOVERY=true

# Enable virtual scrolling for large datasets (default: true)
# VITE_FACEBOOK_VIRTUAL_SCROLLING=true

# Enable performance monitoring (default: false)
# VITE_FACEBOOK_PERFORMANCE_MONITORING=false

# ============================================================================
# SYNC CONFIGURATION
# ============================================================================

# Auto-sync interval in minutes (default: 60, range: 5-1440)
# VITE_FACEBOOK_SYNC_INTERVAL=60

# Number of requests per batch (default: 50, max: 50)
# VITE_FACEBOOK_BATCH_SIZE=50

# Maximum retry attempts for failed requests (default: 3, range: 1-10)
# VITE_FACEBOOK_MAX_RETRIES=3

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Cache timeout in milliseconds (default: 300000 = 5 minutes)
# VITE_FACEBOOK_CACHE_TIMEOUT=300000

# ============================================================================
# DEBUG CONFIGURATION
# ============================================================================

# Enable debug logging (default: false, development only)
# VITE_DEBUG_FACEBOOK=false

# Logging level (default: warn, options: error, warn, info, debug)
# VITE_FACEBOOK_LOG_LEVEL=warn

# Enable API request/response logging (default: false)
# VITE_FACEBOOK_API_LOGGING=false

# ============================================================================
# SECURITY NOTES
# ============================================================================

# Facebook App Secret (server-side only, never expose in client code)
# FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Important:
# - Never commit this file with real values
# - Use different configurations for development/production
# - Keep your App Secret secure and never expose it in client-side code
# - Use HTTPS in production for OAuth redirect URIs