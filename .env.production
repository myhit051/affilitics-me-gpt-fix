# Facebook API Configuration for Production
# Replace with your production Facebook App credentials

# Facebook App ID - MUST be different from development
VITE_FACEBOOK_APP_ID=YOUR_PRODUCTION_FACEBOOK_APP_ID

# Facebook API Version
VITE_FACEBOOK_API_VERSION=v19.0

# OAuth Redirect URI for production domain
VITE_FACEBOOK_REDIRECT_URI=https://yourdomain.com/auth/facebook/callback

# Facebook API Scopes
VITE_FACEBOOK_SCOPES=ads_read,ads_management

# Production settings
VITE_DEBUG_FACEBOOK=false
VITE_FACEBOOK_SYNC_INTERVAL=30
VITE_FACEBOOK_AUTO_SYNC=true

# Analytics and monitoring
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=YOUR_SENTRY_DSN